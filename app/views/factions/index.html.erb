<p id="notice"><%= notice %></p>

<h1>Factions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Faction Home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factions.each do |faction| %>
      <tr>
        <td><%= faction.name %></td>
        <td><%= faction.description %></td>
        <td><%= faction.image %></td>
        <% if faction.place.present? %>
          <td><%= faction.place.name %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', faction %></td>
        <td><%= link_to 'Edit', edit_faction_path(faction) %></td>
        <td><%= link_to 'Destroy', faction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

