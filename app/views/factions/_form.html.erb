<%= simple_form_for @faction do |f| %>
  <span style="">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :place_id, collection: Place.order(:name), label: 'Faction Home' %>
    <%= f.input :image, as: :file, label: 'Upload Image' %>

    <%= f.button :submit, :class => "btn btn-success" %>
  </span>
<% end %>
